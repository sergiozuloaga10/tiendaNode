doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Panel de Trabajador
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="#") TiendaGames
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              a.nav-link.active(href="/trb/inventario") Gestionar Inventarios
    .container.mt-4
      h1.text-center Panel de Trabajador
      .row
        .col-md-4
          .card
            .card-body
              h5.card-title Gestionar Inventarios
              p.card-text Ver el inventario de videojuegos y plataformas.
              a.btn.btn-primary(href="/trb/inventario") Ir a Inventarios

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
